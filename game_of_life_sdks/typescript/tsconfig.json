{
  "compilerOptions": {
		"module": "ESNext",
    "resolveJsonModule": true,
		"moduleResolution": "node",
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./dist",
		"baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
